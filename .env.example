# ===== MODE =====
MODE=paid                # paid / free

# ===== Telegram =====
BOT_TOKEN=YOUR_BOT_TOKEN

# ===== Owner/Admin =====
OWNER_ID=0               # telegram id angka
ADMIN_IDS=0              # pisah koma: 111,222

# ===== DB =====
DB_PATH=/var/lib/opal-daemon/app.db

# ===== Pakasir (PAID only) =====
PAKASIR_SLUG=your_project_slug
PAKASIR_API_KEY=your_pakasir_api_key

# Webhook path yang dipakai express (PAID only)
WEBHOOK_PATH=/pakasir/webhook
PORT=9000

# (opsional) supaya webhook ga gampang di-spoof
WEBHOOK_TOKEN=change_me_random

# ===== Trial (PAID only) =====
TRIAL_ENABLED=true
TRIAL_DAYS=1
TRIAL_ONCE_PER_USER=true
TRIAL_MAX_DAILY=50
TRIAL_PASSWORD_MODE=auto    # auto / manual
TRIAL_PREFIX=TR

TZ=Asia/Jakarta
NODE_ENV=production
