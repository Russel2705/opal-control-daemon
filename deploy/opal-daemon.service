[Unit]
Description=Opal ZiVPN Bot (Node.js)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/opal-zivpn-bot
EnvironmentFile=/etc/opal-daemon.env
ExecStart=/usr/bin/node /opt/opal-zivpn-bot/index.js
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
